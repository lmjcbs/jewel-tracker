<h2> Edit the details below </h2>

<form method="post" action="/jewels/<%= @jewel.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%= @jewel.name %>"><br />
  <label for="weight">Weight: </label>
  <input type="text" id="weight" name="weight" value="<%= @jewel.weight %>"><br />
  <label for="colour">Colour: </label>
  <input type="text" id="colour" name="colour" value="<%= @jewel.colour %>"><br />
  <label for="location_found">Location Found: </label>
  <input type="text" id="location_found" name="location_found" value="<%= @jewel.location_found %>"><br />
  <label for="value">Value: </label>
  <input type="text" id="value" name="value" value="<%= @jewel.value %>"><br />
  <input type="submit" value="Save Changes">
</form>